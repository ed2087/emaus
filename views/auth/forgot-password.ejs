<!-- views/auth/forgot-password.ejs -->
<%
  const pageCss = ['auth'];
  const pageScripts = [];
%>

<%- include('../includes/head', { pageCss }) %>
<%- include('../includes/nav') %>

<main class="auth-page">
  <div class="container">
    <div class="auth-card">
      <h1>Olvidé mi Contraseña</h1>
      
      <p class="auth-description">
        Ingresa tu dirección de correo electrónico, número de teléfono y nombre de iglesia para verificar tu identidad y restablecer tu contraseña.
      </p>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/auth/forgot-password" method="POST">
        <div class="form-group">
          <label for="email">Correo Electrónico</label>
          <input type="email" id="email" name="email" required>
        </div>
        
        <div class="form-group">
          <label for="phone">Número de Teléfono</label>
          <input type="tel" id="phone" name="phone" required>
        </div>
        
        <div class="form-group">
          <label for="church">Nombre de la Iglesia</label>
          <input type="text" id="church" name="church" required>
        </div>
        
        <div class="form-action">
          <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>
        </div>
        
        <div class="auth-links">
          <a href="/auth/login">¿Recuerdas tu contraseña? Iniciar Sesión</a>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('../includes/footer', { pageScripts }) %>