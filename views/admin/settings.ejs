<!-- views/admin/settings.ejs -->
<%
  const pageCss = ['cms', 'cms-settings'];
  const pageScripts = ['cms/cmsSettings'];
%>

<%- include('../includes/head', { pageCss }) %>

<div class="admin-layout">
  <!-- Admin sidebar (omitted for brevity) -->
  <%- include('../includes/admin-sidebar') %>
  <!-- Admin content -->
  <main class="admin-content">
    <header class="admin-header">
      <h1>Configuración del CMS</h1>
    </header>
    
    <div class="content-container">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>
      
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success">
          <%= success %>
        </div>
      <% } %>
      
      <form action="/admin/settings" method="POST" class="settings-form">
        <div class="form-section">
          <h2>Configuración del Sitio</h2>
          
          <div class="form-group">
            <label for="siteName">Nombre del Sitio</label>
            <input 
              type="text" 
              id="siteName" 
              name="siteName" 
              value="Comunidad Emaús" 
            >
          </div>
          
          <div class="form-group">
            <label for="siteDescription">Descripción del Sitio</label>
            <textarea 
              id="siteDescription" 
              name="siteDescription" 
              rows="2"
            >Una comunidad enfocada en el crecimiento espiritual y conexiones significativas.</textarea>
          </div>
          
          <div class="form-group">
            <label for="contactEmail">Correo Electrónico de Contacto</label>
            <input 
              type="email" 
              id="contactEmail" 
              name="contactEmail" 
              value="contact@example.com" 
            >
          </div>
        </div>
        
        <div class="form-section">
          <h2>Configuración de Contenido</h2>
          
          <div class="form-group checkbox-group">
            <label>
              <input 
                type="checkbox" 
                name="autoApproveComments" 
                checked
              >
              Aprobar automáticamente comentarios de usuarios verificados
            </label>
          </div>
          
          <div class="form-group">
            <label for="itemsPerPage">Elementos por Página</label>
            <input 
              type="number" 
              id="itemsPerPage" 
              name="itemsPerPage" 
              value="10" 
              min="5"
              max="50"
            >
            <div class="input-help">Número de elementos a mostrar por página en los listados</div>
          </div>
          
          <div class="form-group">
            <label for="featuredItems">Elementos Destacados en la Página de Inicio</label>
            <input 
              type="number" 
              id="featuredItems" 
              name="featuredItems" 
              value="4" 
              min="1"
              max="10"
            >
            <div class="input-help">Número de elementos destacados a mostrar en la página de inicio</div>
          </div>
        </div>
        
        <div class="form-section">
          <h2>Registro de Usuarios</h2>
          
          <div class="form-group checkbox-group">
            <label>
              <input 
                type="checkbox" 
                name="allowRegistration" 
                checked
              >
              Permitir nuevos registros de usuarios
            </label>
          </div>
          
          <div class="form-group checkbox-group">
            <label>
              <input 
                type="checkbox" 
                name="requireAdminApproval" 
                checked
              >
              Requerir aprobación del administrador para nuevos registros
            </label>
          </div>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Guardar Configuración</button>
          <button type="reset" class="btn btn-outline">Restablecer</button>
        </div>
      </form>
    </div>
  </main>
</div>

<%- include('../includes/footer', { pageScripts }) %>